.container
  = render "layouts/sidebar"

  .derp.column-container
    %h1 
      Designers
    %p
      = link_to '+ add designer', new_designer_path

  .index
    - @designers.each do |designer|
      .thumbnail
        %h4
          = link_to "#{designer.name}", designer_path(designer)
        %p
          - if designer.collections.any?  
            - designer.collections.each do |collection|
              %p
                - collection.products.each do |product|
                  %p
                    = product.name
              %p
                = link_to "#{collection.name}", collection_path(collection)
        %p.remove
          = link_to 'remove designer', designer_path(designer), method: :delete
        %p.remove
          = link_to 'edit designer', edit_designer_path(designer)
