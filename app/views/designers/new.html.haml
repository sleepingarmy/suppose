.container.designers-new
  = render "layouts/sidebar"

  .column-container
    %h1 
      Add
      %br/
      Designer

  .index
    = form_for @designer do |f|
      .column-container
        %br/
        = f.label :name
        = f.text_field :name, placeholder: 'Anna Maria Horner'

        = f.label :bio
        = f.text_field :bio, placeholder: 'AMH bio'

        = f.label :company_id
        = f.select :company_id, Company.all.collect { |c| [ c.name, c.id ]}, prompt: 'Select Company'

        = f.submit "submit"
