.container
  = render "layouts/sidebar"

  .column-container
    .row
      %h1
        Coming Soon
  
    - if @coming_soon.count > 0
      .row.index
        - @coming_soon.each do |product|
          .thumbnail
            %h4
              = product.name
            %p
              from the 
              = product.collection.name
              collection 
            %p
              by
              = product.designer_name
            %p
              category:
              = product.category
            %p
              $
              = product.price
              per yard
            %p
            - if product.on_sale == true
              = "this item is on sale!"
            %p.small
              = link_to 'edit', edit_product_path(product)
            %p.small
              = link_to 'delete', product_path(product), method: :delete
    - else
      %p 
        There doesn't seem to be anything coming soon.  Check back soon!

  = render "layouts/rightbar"
  